body section#app .box.me
    h1, h4
        background linear-gradient(top, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 1) 100%) 
        transform none
        opacity 1
    height size * 2
    text-align center

    > *
        text-align left
    .head
        wid = 120px
        width wid + 20
        height wid + 20
        margin 0 auto
        border-radius 100%
        margin 25px 0
        box-shadow 0 0 25px rgba(0, 0, 0, 0.6)
        overflow hidden
        position relative
        display inline-block
        img
            width wid
            height wid
        &:before
            display block
            content ''
            width 100%
            height 100%
            position absolute
            top 0
            left 0
            box-shadow inset 0 0 25px rgba(0, 0, 0, 0.6)
        border solid 10px rgba(0, 0, 0, 0.6)